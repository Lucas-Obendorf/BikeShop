<div ng-controller="BikeController">
    <h4>{{Title}}</h4>

    <div>
        <h6 ng-repeat="error in Errors">
            {{error.Message}}
        </h6>
    </div>

    <form ng-submit="SaveBike()">
        <div class="row">
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="form-control-label" for="Rating">Rating: </label>
                    <input id="Rating" class="form-control" type="number" ng-model="Bike.Rating" min="0" max="5" step="0.5" />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="form-control-label" for="Price">Price: </label>
                    <input id="Price" class="form-control" type="number" ng-model="Bike.Price" min="0.01" step="0.01" />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="form-control-label" for="Quantity">Quantity: </label>
                    <input id="Quantity" class="form-control" type="number" ng-model="Bike.Quantity" min="0" step="1"/>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label class="form-control-label" for="Type">Type: </label>
                    <input id="Type" class="form-control" type="text" ng-model="Bike.Type" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="form-control-label" for="Description">Description: </label>
                    <textarea id="Description" class="form-control" ng-model="Bike.Description"></textarea>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>